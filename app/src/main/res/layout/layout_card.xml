<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/spacing_normal"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStopIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop ID"
            android:textStyle="bold"
            android:padding="@dimen/spacing_normal"/>

        <TextView
            android:id="@+id/tvStopid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            tools:text="LUAS1"/>

        <TextView
            android:id="@+id/tvNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Name"
            android:textStyle="bold"
            android:padding="@dimen/spacing_normal"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            tools:text="LUAS Tallaght"/>

        <TextView
            android:id="@+id/tvRouteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Routes"
            android:textStyle="bold"
            android:padding="@dimen/spacing_normal"/>

        <TextView
            android:id="@+id/tvRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            tools:textColor="@color/colorGreen"
            tools:text="Green line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/show_schedule_btn_title"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorAccent"
                android:padding="@dimen/spacing_normal"/>

            <ImageButton
                android:id="@+id/ibFavourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@drawable/ic_favorite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ibFavourite"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_medium_normal"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_large"
                android:text="Save"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>